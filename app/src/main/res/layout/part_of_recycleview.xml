<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recyclerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@android:string/unknownName"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/recyclerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name not set"
        android:textAlignment="center"
        android:layout_alignLeft="@id/recyclerImageView"
        android:layout_alignTop="@id/recyclerImageView"
        android:layout_alignRight="@id/recyclerImageView"
        android:layout_alignBottom="@id/recyclerImageView"
        android:background="@drawable/scrim"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="#FFFFFFFF"
        />

</RelativeLayout>